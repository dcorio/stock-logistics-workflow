<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="report_picking_pallet_document">
      <t t-call="report.external_layout">
        <div class="page">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-7">
              <address t-field="o.partner_id"
                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
              <span t-field="o.partner_id.vat"/>
            </div>
          </div>

          <h2>
            <center>
              <span>PACKING LIST NÂ°</span>
              <span t-field="o.name"/>
            </center>
          </h2>

          <div class="row mt32 mb32">
            <div class="col-xs-2">
              <strong>Document Date</strong>
              <p t-field="o.date"/>
            </div>
            <div class="col-xs-2" t-if="o.name">
              <strong>Document Nr.</strong>
              <p t-field="o.name"/>
            </div>
            <div class="col-xs-2">
              <strong>Gross weight</strong>
              <p t-field="o.weight"/>
            </div>
            <div class="col-xs-2">
              <strong>Net weight</strong>
              <p t-field="o.net_weight"/>
            </div>
            <div class="col-xs-2" t-if="o.dest_package_id.ul_id">
              <strong>Dimensions</strong>
              <p>
                <span t-field="o.dest_package_id.ul_id.height"/> cm x
                <span t-field="o.dest_package_id.ul_id.width"/> cm x
                <span t-field="o.dest_package_id.ul_id.length"/> cm
              </p>
            </div>
          </div>

          <h2>
            <center>
              <span>CERTIFIED SWISS COSMETICS WITHOUT ALCOHOL</span>
            </center>
          </h2>

          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Description</th>
                <th class="text-center">Lot Number</th>
                <th class="text-center">Expiry Date</th>
                <th class="text-center">Quantity</th>
                <th class="text-center">Box Number</th>
              </tr>
            </thead>
            <tbody class="invoice_tbody">
              <t t-foreach="o.quant_ids" t-as="l">
                <tr class="small">
                  <td><span t-field="l.product_id.name"/></td>
                  <td class="text-center"><span t-field="l.lot_id.name"/></td>
                  <td class="text-center"><span t-field="l.lot_id.life_date"/></td>
                  <td class="text-center"><span t-field="l.qty"/></td>
                  <td class="text-center"><span t-field="l.package_id.name"/></td>
                </tr>
              </t>
            </tbody>
          </table>

        </div>
      </t>
    </template>

    <template id="report_picking_pallet">
      <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
          <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'stock_picking_pallet.report_picking_pallet_document')"/>
        </t>
      </t>
    </template>
  </data>
</openerp>
